<odoo>
    <data>
        <!-- Vue pour la classe FonctionEmploye -->
        <record id="view_fonction_employe_form" model="ir.ui.view">
            <field name="name">fonction.employe.form</field>
            <field name="model">fonction.employe</field>
            <field name="arch" type="xml">
                <form string="Fonction Employé">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue pour la classe Employe -->
        <record id="view_employe_form" model="ir.ui.view">
            <field name="name">employe.form</field>
            <field name="model">employe</field>
            <field name="arch" type="xml">
                <form string="Employé">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="prenom"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="fonction_employe_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue pour la classe TypeMateriel -->
        <record id="view_type_materiel_form" model="ir.ui.view">
            <field name="name">type.materiel.form</field>
            <field name="model">type.materiel</field>
            <field name="arch" type="xml">
                <form string="Type de Matériel">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue pour la classe Materiel -->
        <record id="view_materiel_form" model="ir.ui.view">
            <field name="name">materiel.form</field>
            <field name="model">materiel</field>
            <field name="arch" type="xml">
                <form string="Matériel">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="type_materiel_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue pour la classe TypeService -->
        <record id="view_type_service_form" model="ir.ui.view">
            <field name="name">type.service.form</field>
            <field name="model">type.service</field>
            <field name="arch" type="xml">
                <form string="Type de Service">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="duration"/>
                            <field name="duration_display"/>
                            <field name="type_materiel_ids" widget='many2many_tags'/>
                            <field name="fonction_employe_line_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="fonction_employe_id"/>
                                    <field name="number"/>
                                </tree>
                            </field>
                            <field name="product_ids"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue pour la classe Service -->
        <record id="view_service_form" model="ir.ui.view">
            <field name="name">service.form</field>
            <field name="model">service</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="type_service_id"/>
                            <field name="service_datetime_begin"/>
                            <field name="service_datetime_end"/>
                            <field name="partner_id"/>
                            <field name="employe_ids" widget='many2many_tags'/>
                            <field name="materiel_ids" widget='many2many_tags'/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>